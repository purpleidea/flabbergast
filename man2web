#!/usr/bin/make -f

MANS = $(wildcard ./*.7) $(wildcard ./*.1) $(wildcard platform/*/*.1)
TARGETS = $(addprefix www/$(TRAVIS_TAG)/, $(notdir $(patsubst %, %.pdf, $(MANS)) $(patsubst %, %.html, $(MANS))))

all: $(TARGETS)

define MANBLOCK
www/$(TRAVIS_TAG)/$(2).pdf: $(1)
	man -Tdvi -l ./$(1) > $(2).dvi
	dvipdfm -q $(2).dvi
	mv $(2).pdf $$@
	rm -f $(2).dvi

www/$(TRAVIS_TAG)/$(2).html: $(1)
	man -Thtml -t $(1) > $$@
endef

$(foreach i, $(MANS), $(eval $(call MANBLOCK,$(i),$(notdir $(i)))))

print:
	@echo $(MANS)

clean:
	rm -f $(TARGETS)

.PHONY: all clean
